<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/arkaplannn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zeynep.cozcozdurapp.YeniParolaActivity">



    <EditText
        android:id="@+id/uyeEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:layout_marginTop="130dp"
        android:inputType="textEmailAddress"

        />


    <Button
        android:id="@+id/yeniParolaGonder"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="80dp"
        android:background="@color/uyeButtonColor"
        android:text="@string/yeniparola"
        android:textColor="#FFFF" />
</LinearLayout>
