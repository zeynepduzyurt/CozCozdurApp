<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundsigin"
    tools:context="com.example.zeynep.cozcozdurapp.MainActivity">

    <ImageView
        android:layout_width="195dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/logo" />

    <EditText
        android:id="@+id/email"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/sifre"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="@string/sifre"
        android:inputType="textEmailAddress" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleButton"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp">

    </com.google.android.gms.common.SignInButton>

    <Button
        android:id="@+id/girisyap"
        android:layout_width="146dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp"
        android:text="@string/girisyap" />

    <TextView
        android:id="@+id/hesapkaydol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:paddingLeft="20dp"
        android:text="@string/kaydol"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/sifreunutma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sifre"
        android:layout_marginStart="38dp"
        android:text="@string/sifreunutma"
        android:textStyle="bold" />


</RelativeLayout>
