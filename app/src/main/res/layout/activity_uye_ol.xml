<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.zeynep.cozcozdurapp.UyeOl">


    <EditText
        android:id="@+id/uyeEmail"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="100dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/uyeParola"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_marginLeft="5dp"
        android:ems="10"
        android:hint="@string/sifre"
        android:inputType="textPassword"
        android:paddingLeft="10dp" />


    <Button
        android:id="@+id/yeniUyeButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="35dp"
        android:background="@color/uyeButtonColor"
        android:text="Üye Ol!"
        android:textColor="#FFFF" />


    <Button
        android:id="@+id/uyeGirisButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="35dp"
        android:background="@color/colorPrimary"
        android:text="Zaten üye misin?"
        android:textAllCaps="false"
        android:textColor="#FFFF" />

</LinearLayout>
